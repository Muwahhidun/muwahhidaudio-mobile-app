# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/audio_lessons
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=audio_lessons

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CACHE_DB=0
REDIS_SESSION_DB=1
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME="Islamic Audio Lessons API"
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Audio files
AUDIO_FILES_PATH=/app/audio_files
